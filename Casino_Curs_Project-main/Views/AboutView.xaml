            <RowDefinition Height="18*"/>
            <RowDefinition Height="171*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <Label Content ="BATUREL" VerticalAlignment="Bottom" HorizontalAlignment="Center" Grid.Column="3" Grid.Row="1" FontSize="36" FontFamily="Harrington" FontWeight="Medium" Grid.ColumnSpan="2" />
