        <TextBlock Name="vk" Grid.Column="4" Grid.Row="6" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Grid.ColumnSpan="2"/>
        <TextBlock Name="viber" Grid.Column="7" Grid.Row="6" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" />

    </Grid>
